# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/creatorlink

# PostgreSQL Connection Details (auto-populated by Replit, manual on other platforms)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your-password
PGDATABASE=creatorlink

# Session Secret (generate a random string)
SESSION_SECRET=your-random-secret-key-change-this-in-production

# Node Environment
NODE_ENV=development

# Stripe Payment Processing (optional - only needed for payment features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
TESTING_STRIPE_SECRET_KEY=sk_test_your_testing_key
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_your_testing_public_key

# Object Storage (optional - only needed for file uploads)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# Note: On Replit, these are auto-populated. For local/VS Code:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to version control!
